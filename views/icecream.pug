extends layout

block content
  h1= title
  - let results=[{icecream_flavours:"Strawberry",icecream_price:50,icecream_quantity :100},{icecream_flavours:"Vanilla",icecream_price:60,icecream_quantity :200},{icecream_flavours :"Cherry", icecream_price :70, icecream_quantity :300}]
  div(class="container-fluid")
  div(class="row")
   each value,index in results
    div(class="col-sm-2" onclick=`buy(${index})`)  #{value.icecream_flavours} icecream, price #{value.icecream_price}, with quantity #{value.icecream_quantity}
   script.
    function buy(index)
    {
      alert(`Your purchased Item ${index}`)
    }
  
 